// Return to the main page when deleting on the 'show' page
if(!document.getElementById('items')) {
  Turbolinks.visit("<%= items_path %>");
}
else {
  document.getElementById('<%= @item.to_param %>').outerHTML = '';

  // Show the default view when no items are remaining
  if(!document.querySelectorAll('.card').length) {
    document.getElementById('no-items').style.display = 'block';
  }
}
